<?xml version="1.0" encoding="utf-8"?>
<log4net>

  <appender name="RollingFile" type="log4net.Appender.FileAppender">
    <file value="C:\Temp\HC_app.log" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-5p %d{hh:mm:ss} %message%newline" />
    </layout>
  </appender>
  <appender name="ADONetAppender" type="log4net.Appender.ADONetAppender">
    <bufferSize value="5" />
    <connectionType value="System.Data.SqlClient.SqlConnection, System.Data, Version=1.0.3300.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
    <connectionString name="log4net" value="Data Source=(LocalDB)\\ProjectsV13;Initial Catalog=HC;Integrated Security=True" />
    <commandText value="INSERT INTO [dbo].[EventLogs] ([Host],[Date],[Level],[Category],[Thread],[Method],[Principal],[UserAgent],[UserAddress],[Uri],[Duration],[ResponseCode],[Message],[Exception]) VALUES (@Host,@Date,@Level,@Category,@Thread,@Method,@Principal,@UserAgent,@UserAddress,@Uri,@Duration,@ResponseCode,@Message,@Exception)" />
    <parameter>
      <parameterName value="@Host" />
      <dbType value="String" />
      <size value="255" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%property{log4net:HostName}" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Date" />
      <dbType value="DateTime" />
      <layout type="log4net.Layout.RawUtcTimeStampLayout" />
    </parameter>
    <parameter>
      <parameterName value="@Level" />
      <dbType value="String" />
      <size value="50" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%level" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Category" />
      <dbType value="String" />
      <size value="50" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="Category" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Thread" />
      <dbType value="String" />
      <size value="255" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%thread" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Method" />
      <dbType value="String" />
      <size value="20" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="Method" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Principal" />
      <dbType value="String" />
      <size value="255" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="Principal" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@UserAgent" />
      <dbType value="String" />
      <size value="255" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="UserAgent" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@UserAddress" />
      <dbType value="String" />
      <size value="255" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="UserAddress" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Uri" />
      <dbType value="String" />
      <size value="1000" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="Uri" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Duration" />
      <dbType value="Int32" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="Duration" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@ResponseCode" />
      <dbType value="Int32" />
      <layout type="log4net.Layout.RawPropertyLayout">
        <key value="ResponseCode" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Message" />
      <dbType value="String" />
      <size value="-1" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message" />
      </layout>
    </parameter>
    <parameter>
      <parameterName value="@Exception" />
      <dbType value="String" />
      <size value="-1" />
      <layout type="log4net.Layout.ExceptionLayout" />
    </parameter>
  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="ADONetAppender" />
  </root>
</log4net>